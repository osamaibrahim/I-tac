<data>
    <record id="inherits_res_users_form" model="ir.ui.view">
        <field name="name">inherit.res.users.form</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='preferences']/group" position="after">
                <group string="Abbreviation" name="abbreviation">
                    <field name="sales_person_abbreviation"/>
                </group>
            </xpath>

        </field>
    </record>
</data>